script/source = "extends CanvasLayer

func _ready():
	if Global.first_load == false:
		queue_free();
	else:
		MusicManager.audio_stream_player.volume_db = -80.0;
		yield(get_tree(), \"idle_frame\");
		MusicManager.audio_stream_player.playing = false;

# warning-ignore:unused_argument
func _on_AnimationPlayer_animation_finished(anim_name):
	MusicManager.audio_stream_player.volume_db = 0.0;
	MusicManager.audio_stream_player.playing = true;
	queue_free();
"

